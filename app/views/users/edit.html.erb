<h1 class="text-center" style="margin-bottom:15px"><%= t('actions.edit') %></h1>

<div class="col-md-3"></div>
<div class="col-md-6">
    <%= simple_form_for(@user, defaults: { input_html: { class: 'form-control' }, label:false }) do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit "Salvar", class: "btn btn-success" %>
    <%end%>
    
    <% if @user == current_user %>
        <%= link_to t('actions.remove'), @user, method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' }, class: "btn btn-danger" %>
    <% end %>
</div>
<div class="col-md-3"></div>
