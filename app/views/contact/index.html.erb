<div class="row">
	<div class="col-sm-12">
		<div class="contact-form">
			<h2>Entre em contato</h2>
			<%= form_for @contact, :url => send_email_url, :html => {class: "contact-form row"} do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<div class="form-group col-md-6">
					<%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
				</div>
				<div class="form-group col-md-6">
					<%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
				</div>
				<div class="form-group col-md-12">
					<%= f.text_area :message, class: "form-control", placeholder: "Digite sua mensagem", rows: "8" %>
				</div>
				<div class="form-group col-md-12">
					<%= submit_tag 'Enviar', method: "post", url: contact_url, class: "btn btn-success pull-right" %>
				</div>
			<% end %>
	    </div>
	</div>
</div>
