<p id="notice"><%= notice %></p>

<h1>Minhas listas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      
      <div class="row">
        <% @lists.each do |list| %>
        <div class="col-sm-3" style="background-color:yellow; margin:10px;">
          <div>
            <%= link_to list.title, list %>
            <div class="pull-right">
              <%= link_to(edit_list_path(list)) do %>
        				<i class="fa fa-pencil fa-fw"></i>
        			<% end %>
              <%= link_to( list_path(list), method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' }) do %>
                <i class="fa fa-trash-o fa-fw"></i>
              <% end %>
            </div>
          </div>
          <p>Cridada em: <%=list.created_at.strftime("%d/%m/%Y")%></p>
          
          <ul style="list-style-type: square; padding: 15px;">
            <% first_three(list).each do |item| %>
              <li><%= item.text %></li>
            <% end %>
          </ul>
          
        </div>
        <% end %>
      </div>
      
    </div>
  </tbody>
</table>

<br>

<%= link_to 'Nova lista', new_list_path %>
